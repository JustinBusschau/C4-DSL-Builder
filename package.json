{
  "name": "c4dslbuilder",
  "version": "0.0.1",
  "description": "A CLI tool designed to compile a folder structure of markdowns and mermaid files into a site, pdf, single file markdown or a collection of markdowns with links - inspired by c4builder",
  "main": "index.js",
  "bin": {
    "c4dslbuilder": "./lib/index.js"
  },
  "type": "module",
  "homepage": "https://JustinBusschau.github.io/C4-DSL-Builder/",
  "author": "Justin Busschau",
  "license": "MIT",
  "keywords": [
    "C4",
    "C4Model",
    "Architecture",
    "Mermaid",
    "Markdown",
    "Documentation",
    "Software Architecture",
    "PDF",
    "Generator"
  ],
  "bugs": {
    "url": "https://github.com/JustinBusschau/C4-DSL-Builder/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JustinBusschau/C4-DSL-Builder.git"
  },
  "scripts": {
    "clean": "rimraf lib coverage Example docs .c4dslbuilder",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint --fix",
    "build": "npm run clean && tsc",
    "test": "vitest",
    "test:cov": "vitest run --coverage",
    "local": "npm run clean && npm run format && npm run lint && npm run build && npm run test:cov && npm uninstall -g c4dslbuilder && npm i -g && c4dslbuilder",
    "cli": "node ./lib/index.js"
  },
  "dependencies": {
    "@mermaid-js/mermaid-cli": "^11.4.2",
    "chalk": "^5.4.1",
    "chokidar": "^4.0.3",
    "commander": "^13.1.0",
    "configstore": "^7.0.0",
    "figlet": "^1.8.1",
    "fs-extra": "^11.3.0",
    "joi": "^17.13.3",
    "inquirer": "^12.6.0",
    "md-to-pdf": "^5.2.4",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "unified": "^11.0.5"
  },
  "devDependencies": {
    "@types/chalk": "^0.4.31",
    "@types/chokidar": "^1.7.5",
    "@types/commander": "^2.12.0",
    "@types/configstore": "^6.0.2",
    "@types/figlet": "^1.7.0",
    "@types/fs-extra": "^11.0.4",
    "@types/mdast": "^4.0.4",
    "@types/node": "^22.14.1",
    "@vitest/coverage-v8": "^3.1.2",
    "eslint": "^9.25.1",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.0",
    "vite": "^6.3.3",
    "vitest": "^3.1.2",
    "vitest-sonar-reporter": "^2.0.0"
  }
}
