{
  "name": "c4dslbuilder",
  "version": "0.0.1",
  "description": "A CLI tool designed to compile a folder structure of markdowns and mermaid files into a site, pdf, single file markdown or a collection of markdowns with links - inspired by c4builder",
  "main": "index.js",
  "type": "module",
  "bin": {
    "c4dslbuilder": "./index.js"
  },
  "homepage": "https://JustinBusschau.github.io/C4-DSL-Builder/",
  "bugs": {
    "url": "https://github.com/JustinBusschau/C4-DSL-Builder/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JustinBusschau/C4-DSL-Builder.git"
  },
  "scripts": {
    "clean": "rimraf coverage lib junit.xml",
    "build": "npm run clean && tsc -p .",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "test": "jest",
    "test:cov": "jest --coverage",
    "local": "npm run clean && npm run format && npm run build && npm run lint && npm run test && npm i -g && c4dslbuilder"
  },
  "keywords": [
    "C4",
    "C4Model",
    "Architecture",
    "Mermaid",
    "Markdown",
    "Documentation",
    "Software Architecture",
    "PDF",
    "Generator"
  ],
  "author": "Justin Busschau",
  "license": "MIT",
  "dependencies": {
    "@mermaid-js/mermaid-cli": "^10.9.1",
    "chalk": "^5.4.1",
    "clear": "^0.1.0",
    "commander": "^13.1.0",
    "conf": "^13.1.0",
    "configstore": "^7.0.0",
    "express": "^4.17.1",
    "fs-extra": "^7.0.1",
    "inquirer": "^8.2.2",
    "joi": "^17.12.2",
    "md-to-pdf": "^5.1.0",
    "node-watch": "^0.6.3",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "rimraf": "^6.0.1",
    "unified": "^11.0.5",
    "zlib": "^1.0.5"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/chalk": "^0.4.31",
    "@types/commander": "^2.12.0",
    "@types/jest": "^29.5.14",
    "@types/mdast": "^4.0.4",
    "@types/node": "^22.13.17",
    "eslint": "^9.23.0",
    "figlet": "^1.8.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "jest-transform-stub": "^2.0.0",
    "jsonc-parser": "^3.3.1",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.1",
    "typescript-eslint": "^8.29.0"
  },
  "jest-junit": {
    "outputDirectory": "./coverage"
  },
  "jestSonar": {
    "reportPath": "./coverage"
  }
}
